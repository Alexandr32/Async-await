<Window x:Class="TestTaskWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="286*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBox Name="FirstNumber"/>
                <TextBox  Name="SecondNumber"/>
                <TextBlock Text="Sum" Name="Sum"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <Button Name="ButtonBase" Content="Запуск процесса" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Padding="20" FontSize="30" Click="ButtonBase_OnClick"/>
                <Button Name="ButtonCancle" Content="Сброс подсчета" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Padding="20" FontSize="30" Margin="5" Click="ButtonCancle_OnClick"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>